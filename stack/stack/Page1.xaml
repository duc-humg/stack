<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stack.Page1"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="40">
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="30"/>
            <Label Text="Cross-platform apps made easy" FontSize="18" HorizontalOptions="Center" />
            <Button Text="Login" Clicked="Button_Clicked" BackgroundColor="#1dabf0"/>
            <Button Text="Register" Clicked="Button_Clicked" BackgroundColor="#1dabf0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>